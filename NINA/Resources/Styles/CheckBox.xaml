    <Style x:Key="BorderlessOnOffCheckbox" TargetType="{x:Type CheckBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid>
                        <Path
                            x:Name="PART_CheckedSymbol"
