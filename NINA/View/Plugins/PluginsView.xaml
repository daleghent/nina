                                    <TextBlock FontWeight="Bold" Text="{Binding Version.Minor}" />
                                    <TextBlock FontWeight="Bold" Text="." />
                                    <TextBlock FontWeight="Bold" Text="{Binding Version.Patch}" />
                                    <TextBlock FontWeight="Bold" Text="." />
                                    <TextBlock FontWeight="Bold" Text="{Binding Version.Build}" />
                                </StackPanel>
