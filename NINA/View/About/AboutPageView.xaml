<UserControl
    x:Class="NINA.View.About.AboutPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NINA.View.About"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ns="clr-namespace:NINA.Locale;assembly=NINA.Core"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <TabControl
        Margin="-7,-18,0,-18"
        Style="{StaticResource SecondLevelTabControl}"
        TabStripPlacement="Left">
        <TabItem>
            <TabItem.Header>
                <TextBlock
                    MinHeight="30"
                    FontSize="14"
                    Style="{StaticResource SideBarTextBlock}"
                    Text="{ns:Loc LblAboutNINA}" />
            </TabItem.Header>
            <TabItem.Content>
                <local:AboutNINAView DataContext="{Binding}" />
            </TabItem.Content>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <TextBlock
                    MinHeight="30"
                    FontSize="14"
                    Style="{StaticResource SideBarTextBlock}"
                    Text="{ns:Loc LblAuthors}" />
            </TabItem.Header>
            <TabItem.Content>
                <local:AuthorsView />
            </TabItem.Content>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <TextBlock
                    MinHeight="30"
                    FontSize="14"
                    Style="{StaticResource SideBarTextBlock}"
                    Text="{ns:Loc LblLicense}" />
            </TabItem.Header>
            <TabItem.Content>
                <local:LicenseView />
            </TabItem.Content>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <TextBlock
                    MinHeight="30"
                    Margin="5,0,5,0"
                    FontSize="14"
                    Style="{StaticResource SideBarTextBlock}"
                    Text="{ns:Loc LblThirdPartyLicenses}"
                    TextWrapping="Wrap" />
            </TabItem.Header>
            <TabItem.Content>
                <local:ThirdPartyLicensesView />
            </TabItem.Content>
        </TabItem>
    </TabControl>
</UserControl>