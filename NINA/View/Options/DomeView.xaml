<UserControl
    x:Class="NINA.View.Options.DomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:NINA.Core.Enum;assembly=NINA.Core"
    xmlns:local="clr-namespace:NINA.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ninactrl="clr-namespace:NINACustomControlLibrary;assembly=NINACustomControlLibrary"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
    xmlns:rules="clr-namespace:NINA.Core.Utility.ValidationRules;assembly=NINA.Core"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core"
    Name="UC"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Margin="0,5,0,0" DataContext="{Binding ActiveProfile.DomeSettings}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GroupBox Header="{ns:Loc LblDomeSettings}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            Width="250"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeScopeNS}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{ns:Loc LblDomeScopeNSTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ninactrl:OverlayTextBox
                            MinWidth="80"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            OverlayText="{Binding ScopePositionNorthSouth_mm, Converter={StaticResource UnitConverter}, ConverterParameter=' mm'}"
                            Text="{Binding ScopePositionNorthSouth_mm, UpdateSourceTrigger=LostFocus}" />
                    </UniformGrid>
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            Width="250"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeScopeEW}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{ns:Loc LblDomeScopeEWTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ninactrl:OverlayTextBox
                            MinWidth="80"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            OverlayText="{Binding ScopePositionEastWest_mm, Converter={StaticResource UnitConverter}, ConverterParameter=' mm'}"
                            Text="{Binding ScopePositionEastWest_mm, UpdateSourceTrigger=LostFocus}" />
                    </UniformGrid>
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            Width="250"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeScopeUD}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{ns:Loc LblDomeScopeUDTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ninactrl:OverlayTextBox
                            MinWidth="80"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            OverlayText="{Binding ScopePositionUpDown_mm, Converter={StaticResource UnitConverter}, ConverterParameter=' mm'}"
                            Text="{Binding ScopePositionUpDown_mm, UpdateSourceTrigger=LostFocus}" />
                    </UniformGrid>
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            Width="250"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeRadius}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{ns:Loc LblDomeRadiusTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ninactrl:OverlayTextBox
                            MinWidth="80"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            OverlayText="{Binding DomeRadius_mm, Converter={StaticResource UnitConverter}, ConverterParameter=' mm'}"
                            Text="{Binding DomeRadius_mm, UpdateSourceTrigger=LostFocus}" />
                    </UniformGrid>
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            Width="250"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeGemAxisLength}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{ns:Loc LblDomeGemAxisLengthTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ninactrl:OverlayTextBox
                            MinWidth="80"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            OverlayText="{Binding GemAxis_mm, Converter={StaticResource UnitConverter}, ConverterParameter=' mm'}"
                            Text="{Binding GemAxis_mm, UpdateSourceTrigger=LostFocus}" />
                    </UniformGrid>
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            Width="250"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeLateralAxisLength}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{ns:Loc LblDomeLateralAxisLengthTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ninactrl:OverlayTextBox
                            MinWidth="80"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            OverlayText="{Binding LateralAxis_mm, Converter={StaticResource UnitConverter}, ConverterParameter=' mm'}"
                            Text="{Binding LateralAxis_mm, UpdateSourceTrigger=LostFocus}" />
                    </UniformGrid>
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            Width="250"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeAzimuthToleranceDegrees}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{ns:Loc LblDomeAzimuthToleranceDegreesTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ninactrl:OverlayTextBox
                            MinWidth="80"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            OverlayText="{Binding AzimuthTolerance_degrees, Converter={StaticResource UnitConverter}, ConverterParameter=°}">
                            <TextBox.Text>
                                <Binding Path="AzimuthTolerance_degrees" UpdateSourceTrigger="LostFocus">
                                    <Binding.ValidationRules>
                                        <rules:GreaterZeroRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </ninactrl:OverlayTextBox>
                    </UniformGrid>
                    <UniformGrid Margin="0,5,0,0" Columns="2">
                        <TextBlock
                            MinWidth="200"
                            MinHeight="20"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeSyncTimeout}">
                            <TextBlock.ToolTip>
                                <TextBlock Text="{ns:Loc LblDomeSyncTimeoutTooltip}" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ninactrl:OverlayTextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            OverlayText="{Binding DomeSyncTimeoutSeconds, Converter={StaticResource UnitConverter}, ConverterParameter=' s'}">
                            <TextBox.Text>
                                <Binding Path="DomeSyncTimeoutSeconds" UpdateSourceTrigger="LostFocus">
                                    <Binding.ValidationRules>
                                        <rules:GreaterZeroRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </ninactrl:OverlayTextBox>
                    </UniformGrid>
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeSyncDuringMountSlew}"
                            ToolTip="{ns:Loc LblDomeSyncDuringMountSlewTooltip}" />
                        <CheckBox HorizontalAlignment="Left" IsChecked="{Binding SynchronizeDuringMountSlew}" />
                    </UniformGrid>
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeFindHomeBeforePark}"
                            ToolTip="{ns:Loc LblDomeFindHomeBeforeParkTooltip}" />
                        <CheckBox HorizontalAlignment="Left" IsChecked="{Binding FindHomeBeforePark}" />
                    </UniformGrid>
                    <UniformGrid
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Columns="2">
                        <TextBlock
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblDomeCloseOnUnsafe}"
                            ToolTip="{ns:Loc LblDomeCloseOnUnsafeTooltip}" />
                        <CheckBox HorizontalAlignment="Left" IsChecked="{Binding CloseOnUnsafe}" />
                    </UniformGrid>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>